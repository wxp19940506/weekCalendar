<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#ffffff</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <!-- 标题栏标题文字 -->
    <style name="top_title_text">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <!-- 横向线条 -->
    <style name="line_horizontal">
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- 纵向线条 -->
    <style name="line_vertical">
        <item name="android:background">@color/color_line</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>


    <!-- MyCalendar 月份文字 -->
    <style name="my_Calendar_month">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!-- MyCalendar 上一月下一月按钮 -->
    <style name="my_Calendar_button">
        <item name="android:layout_height">@dimen/my_calendar_button_size</item>
        <item name="android:layout_width">@dimen/my_calendar_button_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- MyCalendar 星期文字 -->
    <style name="my_Calendar_week_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>
