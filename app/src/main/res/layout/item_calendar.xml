<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="0dp"
              android:layout_height="50dp"
              android:layout_weight="1"
    android:background="#fff"
              android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_calendar_week"
        style="@style/my_Calendar_week_text"
        android:paddingBottom="@dimen/my_calendar_week_padding_vertical"
        android:paddingTop="@dimen/my_calendar_week_padding_vertical"
        tools:text="@string/Monday"
        />


    <TextView
        android:id="@+id/tv_calendar_day"
        android:layout_width="@dimen/my_calendar_day_size"
        android:layout_height="@dimen/my_calendar_day_size"
        android:layout_gravity="center"
        android:background="@drawable/selector_calendar_bg"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@drawable/color_gray_to_white"
        android:textSize="16sp"
        tools:text="1"
        />

</LinearLayout>


